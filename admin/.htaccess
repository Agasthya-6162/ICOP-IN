# Prevent directory browsing
Options -Indexes

# Protect database files (SQLite - not used anymore but kept for safety)
<FilesMatch "\\.db$">
    Require all denied
</FilesMatch>

# Protect config files from direct access
<Files "config.php">
    Require all denied
</Files>

# Set default file
DirectoryIndex index.php

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /In-ICOP/admin/
</IfModule>

# PHP Settings
<IfModule mod_php.c>
    php_flag display_errors Off
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>
